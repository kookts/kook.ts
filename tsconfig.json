{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "types": [
      "@types/node"
    ],
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "backup"
  ]
}